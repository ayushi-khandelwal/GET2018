<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>EAD-3</display-name>
	<servlet>
		<display-name>addDetailsServlet</display-name>
		<servlet-name>employeeDetails</servlet-name>
		<servlet-class>com.Servlets.AddEmployeeDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>employeeDetails</servlet-name>
		<url-pattern>/AddEmployeeDetails</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>showEmployeeDetail</display-name>
		<servlet-name>showEmployeeDetail</servlet-name>
		<servlet-class>com.Servlets.ShowAllEmployees</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showEmployeeDetail</servlet-name>
		<url-pattern>/ShowAllEmployees</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>GetEmployeeDetails</display-name>
		<servlet-name>GetEmployeeDetails</servlet-name>
		<servlet-class>com.Servlets.GetEmployeeDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetEmployeeDetails</servlet-name>
		<url-pattern>/GetEmployeeDetails</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>GetEmployeeFullDetails</display-name>
		<servlet-name>GetEmployeeFullDetails</servlet-name>
		<servlet-class>com.Servlets.GetEmployeeFullDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetEmployeeFullDetails</servlet-name>
		<url-pattern>/GetEmployeeFullDetails</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateEmployee</servlet-name>
		<servlet-class>com.Servlets.UpdateEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateEmployee</servlet-name>
		<url-pattern>/UpdateEmployee</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SetEmployee</servlet-name>
		<servlet-class>com.Servlets.SetEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SetEmployee</servlet-name>
		<url-pattern>/SetEmployee</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>home.html</welcome-file>
	</welcome-file-list>
</web-app>